	<body>
	<nav class="navbar navbar-light bg-light">
	<a class="navbar-brand" href="/">
	<%= title %>
	</a>
	<ul class="list-unstyled list-inline pull-right">
	</nav>
		<div class="row">
			<div class="col-md-6">
				<h3>Books table</h3>
				<table class="table  table-condensed" width="100%"  >
					<thead>
				<tr>
				<th>Sr</th>
				  <th>id</th>
				<!-- <th>thumbnailUrl</th> -->
				  <th>title</th>
			<!-- 	  <th>isbn</th> -->
				
				<!--   <th>publishedDate</th> -->
				 <!--  <th>shortDescription</th> -->    
				</tr>
				    </thead>
				    <tbody>
						<% if(result.length){ 
				    for(var i = 0;i < result.length;i++) { %>
						<tr>
						<td><%=i+1%></td>
						    <td><%=result[i]._id%></td>
						 <!-- <td><img src="<%=result[i].thumbnailUrl%>"></td> -->
						 <td><%=result[i].title%></td>
						<!--      <td><%=result[i].isbn%></td> -->
				    
				  <!-- 		<td><%=result[i].date%></td> -->
				      <!--   <td><%=result[i].shortDescription%></td> -->
				</tr>
				       	<%}}%>
				    </tbody>
				  </table>
			</div>
			<div class="col-md-6">
			<h3>Customer table</h3>
		<table class="table  table-condensed" width="100%"  >
					<thead>
				<tr>
				<th>Sr</th>
			
				  <th>id</th>
		
				  <th>Email</th>
				
				   
				</tr>
				    </thead>
				    <tbody>
						<% if(docs.length){ 
				    for(var i = 0;i < docs.length;i++) { %>
						<tr>
						<td><%=i+1%></td>
						<td><%=docs[i]._id%></td>
						 <td><%=docs[i].email%></td>
						
				</tr>
				       	<%}}%>
				    </tbody>
				  </table>

		
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<h3>Order table</h3>
				<table class="table  table-condensed" width="100%"  >
					<thead>
				<tr>
				<th>Sr</th>
				 <th>Order_id</th>
				<th>id_cust</th>
				  <th>id_book</th>
			<!-- 	  <th>isbn</th> -->
				  <th>qty</th>
				  <th>price</th>
			<!-- 	  <th>date</th> -->
				 <!--  <th>shortDescription</th> -->    
				</tr>
				    </thead>
				    <tbody>
						<% if(order.length){ 
				    for(var i = 0;i < order.length;i++) { %>
						<tr>
						<td><%=i+1%></td>
						 <td><%=order[i]._id%></td>
						 <td><%=order[i].id_cust%></td>
						<td><%=order[i].id_book%></td>
				  		<td><%=order[i].qty%></td>
				  		<td><%=order[i].price%></td>
				  <!-- 		<td><%=order[i].date%></td> -->
				</tr>
				       	<%}}%>
				    </tbody>
				  </table>
			</div>
			<div class="col-md-6">
			<h3>Aggregation View</h3>
		<table class="table  table-condensed" width="100%"  >
					<thead>
				<tr>
				<th>Sr</th>
				 <th>Order_id</th>
				 <th>Email</th>
				  <th>title</th>
				   <th>qty</th>
				      <th>price</th>
				</tr>
				    </thead>
				    <tbody>
						<% if(aggregate.length){ 
				    for(var i = 0;i < aggregate.length;i++) { %>
						<tr>
						<td><%=i+1%></td>
						<td><%=aggregate[i]._id%></td>
						 <td><%=aggregate[i].cust%></td>
						  <td><%=aggregate[i].title%></td>
						    <td><%=aggregate[i].qty%></td>
						      <td><%=aggregate[i].price%></td>
				</tr>
				       	<%}}%>
				    </tbody>
				  </table>

		
			</div>
		</div>
	</body>
